            },

            "aw:is_interacted=true": {
                "remove": { "component_groups": [ "interact_test" ] },
                "add": { "component_groups": [ "interacted" ] },
                "set_property": { "aw:is_interacted": true }
            },
            "aw:is_interacted=false": {
                "remove": { "component_groups": [ "interacted" ] },
                "add": { "component_groups": [ "interact_test" ] },
                "set_property": { "aw:is_interacted": false }
            },

            "aw:see_player=true": {
                "add": { "component_groups": [ "should_see_player" ] },
                "set_property": { "aw:see_player": true }
            },
            "aw:see_player=false": {
                "remove": { "component_groups": [ "should_see_player" ] },
                "set_property": { "aw:see_player": false }
            }
        },
        "component_groups": {

            "is_author": {
                "minecraft:type_family": { "family": [ "npc", "aw:npc", "author" ] }
            },
            "is_not_author": {
                "minecraft:type_family": { "family": [ "npc", "aw:npc" ] }
            },

            "interact_test": {
                "minecraft:interact": { "interactions": [ { "interact_text": "action.interact.chat", "on_interact": { "event": "aw:is_interacted=true" }, "swing": true } ] }
            },
            "interacted": {
                "minecraft:timer": { "time": 0.15, "time_down_event": { "event": "aw:is_interacted=false", "target": "self" } }
            },

            "should_see_player": {
                "minecraft:behavior.look_at_player": { "priority": 1 }
            }
        }
