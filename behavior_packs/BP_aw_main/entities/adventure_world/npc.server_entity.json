{
    "format_version": "1.20.50",
    "minecraft:entity": {
        "description": {
            "identifier": "aw:npc",
            "is_experimental": false,
            "is_spawnable": true,
            "is_summonable": true,
            "properties": {
                "aw:npc_type": { "client_sync": true, "type": "int", "range": [0, 18], "default": 0 },
                "aw:is_author": { "client_sync": true, "type": "bool", "default": false },
                "aw:is_interacted": { "client_sync": true, "type": "bool", "default": false },
                "aw:see_player": { "client_sync": false, "type": "bool", "default": false }
            },
            "scripts": {
                "animate": [
                    "interact"
                ]
            },
            "animations": {
                "interact": "controller.animation.npc.interact"
            }
        },
        "components": {
            "minecraft:physics": { "has_collision": true, "has_gravity": true },
            "minecraft:collision_box": { "height": 1.8, "width": 0.6 },
            "minecraft:health": { "value": 1, "max": 1 },
            "minecraft:knockback_resistance": { "value": 1 },
            "minecraft:persistent": { },
            "minecraft:movement.basic": { },
            "minecraft:movement": { "value": 0 },
            "minecraft:nameable": { "allow_name_tag_renaming": true, "always_show": true },
            "minecraft:damage_sensor": { "triggers": [ { "cause": "all", "deals_damage": false } ] }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": { "component_groups": [ "should_see_player", "interact_test", "is_not_author" ] },
                "set_property": { "aw:npc_type": "math.random_integer(0, 7)" }
            },
            "aw:is_author=false,aw:npc_type=0": {
                "add": { "component_groups": [ "should_see_player", "interact_test", "is_not_author" ] },
                "set_property": { "aw:is_author": false, "aw:npc_type": 0 }
            },
            "aw:is_author=false,aw:npc_type=1": {
