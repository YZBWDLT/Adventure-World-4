                ]
            }
            
        },
        "events": {
            "switch_to_melee": {
                "remove": { "component_groups": [ "ranged_mode" ] },
                "add": { "component_groups": [ "melee_mode" ] }
            },
            "switch_to_ranged": {
                "remove": { "component_groups": [ "melee_mode" ] },
                "add": { "component_groups": [ "ranged_mode" ] }
            },
