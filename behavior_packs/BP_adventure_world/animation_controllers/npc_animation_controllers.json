{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.npc.interact": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        { "interacted": "query.property('aw:is_interacted')" }
                    ]
                },
                "interacted": {
                    "transitions": [
                        { "default": "!query.property('aw:is_interacted')" }
                    ],
                    "on_entry": [
                        "/execute if score allowNpcInteraction data matches 1 run function entities/npc/interacted"
                    ]
                }
            }
        }
    }
}