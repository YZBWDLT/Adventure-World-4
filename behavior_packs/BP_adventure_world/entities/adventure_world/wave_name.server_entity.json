{
    "format_version": "1.20.50",
    "minecraft:entity": {
        "description": {
            "identifier": "aw:name_marker",
            "is_experimental": false,
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "aw:name_type": { "type": "enum", "values": [ "wave", "chapter" ], "default": "wave" }
            }
        },
        "components": {
            "minecraft:physics": { "has_collision": false, "has_gravity": false },
            "minecraft:collision_box": { "height": 0, "width": 0 },
            "minecraft:type_family": { "family": [ "inanimate", "name_marker" ] },
            "minecraft:persistent": { },
            "minecraft:nameable": { },
            "minecraft:damage_sensor": { "triggers": [ { "cause": "all", "deals_damage": false } ] }
        },
        "events": {
            "aw:wave_name": { "set_property": { "aw:name_type": "wave" } },
            "aw:chapter_name": { "set_property": { "aw:name_type": "chapter" } },
            "aw:remove_immediately": { "add": { "component_groups": [ "remove_immediately" ] } }
        },
        "component_groups": {
            "remove_immediately": {
                "minecraft:instant_despawn": { }
            }
        }
    }
}