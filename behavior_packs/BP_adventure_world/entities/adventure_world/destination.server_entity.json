{
    "format_version": "1.21.0",
    "minecraft:entity": {
        "description": {
            "identifier": "aw:destination",
            "is_experimental": false,
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "aw:stage": { "type": "enum", "values": [ "appear", "hold" ], "default": "appear", "client_sync": true }
            }
        },
        "components": {
            "minecraft:physics": { "has_collision": false, "has_gravity": false },
            "minecraft:collision_box": { "height": 0, "width": 0 },
            "minecraft:type_family": { "family": [ "inanimate", "marker" ] },
            "minecraft:persistent": { },
            "minecraft:nameable": { },
            "minecraft:damage_sensor": { "triggers": [ { "cause": "all", "deals_damage": false } ] },
            "minecraft:knockback_resistance": { "value": 1, "max": 1 }
        },
        "events": {
            "minecraft:entity_spawned": { "add": { "component_groups": [ "next_stage_timer" ] }, "set_property": { "aw:stage": "appear" } },
            "aw:hold_stage": { "set_property": { "aw:stage": "hold" } },
            "aw:remove_immediately": { "add": { "component_groups": [ "remove_immediately" ] } }
        },
        "component_groups": {
            "next_stage_timer": {
                "minecraft:timer": { "time": 1, "looping": false, "time_down_event": { "event": "aw:hold_stage", "target": "self" } }
            },
            "remove_immediately": {
                "minecraft:instant_despawn": { }
            }
        }
    }
}
