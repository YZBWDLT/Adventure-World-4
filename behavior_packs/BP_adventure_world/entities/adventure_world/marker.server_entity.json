{
    "format_version": "1.21.0",
    "minecraft:entity": {
        "description": {
            "identifier": "aw:marker",
            "is_experimental": false,
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "aw:marker_type": { "type": "enum", "values": [ "none", "name" ], "default": "none" },
                "aw:name": { "type": "enum", "values": [ "none", "wave", "chapter" ], "default": "none" }
            }
        },
        "components": {
            "minecraft:physics": { "has_collision": false, "has_gravity": false },
            "minecraft:collision_box": { "height": 0, "width": 0 },
            "minecraft:type_family": { "family": [ "inanimate", "marker" ] },
            "minecraft:persistent": { },
            "minecraft:nameable": { },
            "minecraft:damage_sensor": { "triggers": [ { "cause": "all", "deals_damage": false } ] },
            "minecraft:knockback_resistance": { "value": 1, "max": 1 }
        },
        "events": {
            "aw:set_wave_name": { "set_property": { "aw:marker_type": "name", "aw:name": "wave" } },
            "aw:set_chapter_name": { "set_property": { "aw:marker_type": "name", "aw:name": "chapter" } },
            "aw:remove_immediately": { "add": { "component_groups": [ "remove_immediately" ] } }
        },
        "component_groups": {
            "remove_immediately": {
                "minecraft:instant_despawn": { }
            }
        }
    }
}