{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.spawner.hint": {
            "initial_state": "default",
            "states": {
                "default": {
                    "animations": [
                        "hint_default"
                    ],
                    "transitions": [
                        { "spider": "query.property('aw:monster_type')==11 || query.property('aw:monster_type')==12" },
                        { "guardian": "query.property('aw:monster_type')==14 || query.property('aw:monster_type')==23" }
                    ]
                },
                "spider": {
                    "animations": [
                        "hint_spider", "spider_leg"
                    ]
                },
                "guardian": {
                    "animations": [
                        "hint_spider", "guardian_setup"
                    ]
                }
            }
        }
    }
}